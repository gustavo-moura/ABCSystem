<RootWidget>:
# this is the rule for your root widget, defining it's look and feel.

    GridLayout:
        cols: 1

        ActionBar:
        #this is the auto provided ActionBar with some menus. Replace it with your
        #app structure
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'ABC System'
                    with_previous: False
                ActionGroup:
                    text: 'Usuario'
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: 'Sair'

                ActionGroup:
                    text: 'Simulacoes       '
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: '1 - Produto'
                        on_press: root.manager.current = 'simulacao'
                    ActionButton:
                        text: '2 - Subcategoria'
                    ActionButton:
                        text: '3 - Venda'

                ActionGroup:
                    text: 'Relatorios                     '
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: '1 - Cartoes Vencidos'
                    ActionButton:
                        text: '2 - Historicos'
                    ActionButton:
                        text: '3 - Frete'
                    ActionButton:
                        text: '4 - Vendas'
                    ActionButton:
                        text: '5 - Top 15 do Semestre'
                    ActionButton:
                        text: '6 - Vendas Casadas'
                    ActionButton:
                        text: '7 - Internacional'


        GridLayout:
            cols: 2
            
            GridLayout:
                rows: 2

                Label:
                    text: 'a - Total Vendido'

                GridLayout:
                    rows:2
                    cols:3

                    Label:
                        text: 'Dia'

                    Label:
                        text: 'Mes'

                    Label:
                        text: 'Ano'

                    Label:
                        text: '12'

                    Label:
                        text: '15'

                    Label:
                        text: str(root.teste)

            GridLayout:
                rows: 2 
                cols: 2

                Label:
                    text: 'Funcionarios do Mes'

                Label:
                    text: 'Funcionarios do Ano'

                GridLayout:
                    cols: 3

                    Label:
                        text: 'mes1 jesuino'

                    Label:
                        text: 'mes2 juliano'

                    Label:
                        text: 'mes3 janaina'

                GridLayout:
                    cols: 3

                    Label:
                        text: 'ano1 minino'

                    Label:
                        text: 'ano2 melino'

                    Label:
                        text: 'ano3 marcondes'


            GridLayout:
                cols: 1
                #text: 'c - top 15 produtos mais vendidos'
                Label:
                    text: 'a'
                

            Button:
                text: 'd - clientes do ano'

            Button:
                text: 'e - clientes da vida'

            Button:
                text: 'f - produtos faltando'

            Button:
                text: 'g - grafico vendas mes'

            Button:
                text: 'h - grafico vendas ano'

            



                        
